<%- include("partials/header.ejs") -%>

<h1>komponieren</h1>
<form class="form-group" action="/compose" method="post">
  <div class="form-group">
    <label for="txt_title">Titel</label>
    <input type="text" class="form-control" name="txt_title" placeholder="[z.b. Öffentliche Verkehrsmittel]">
  </div>
  <div class="form-group">
    <label for="txt_post">Post</label>
    <textarea class="form-control" name="txt_post" rows="4"></textarea>
  </div>
  <button class="btn btn-primary btn-lg" type="submit" name="btn_submit">veröffentlichen</button>
</form>

